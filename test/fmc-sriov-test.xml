<vnf-manager xmlns="http://example.com/ftdv-ngfw">
  <site>
    <name>sriov</name>
    <vnf-deployment>
      <tenant>admin</tenant>
      <deployment-name>FMC-FTD-SMALL-DEPLOYMENT-SRIOV</deployment-name>
      <catalog-vnf>Cisco-FTD-Small-SmallDeployment-SRIOV</catalog-vnf>
      <manager>
        <name>fmc-virtual</name>
      </manager>
      <scaling>
        <threshold>
          <scale-up>13000</scale-up>
          <scale-down>8000</scale-down>
        </threshold>
        <networks>
          <network>
            <name>Inside-SRIOV</name>
            <catalog-descriptor-vdu-id>Inside</catalog-descriptor-vdu-id>
            <ftd-interface>
              <inside/>
            </ftd-interface>
            <ftd-route-network>Inside-Servers</ftd-route-network>
          </network>
          <network>
            <name>Management</name>
            <catalog-descriptor-vdu-id>Management</catalog-descriptor-vdu-id>
          </network>
          <network>
            <name>Outside</name>
            <catalog-descriptor-vdu-id>Outside</catalog-descriptor-vdu-id>
          </network>
          <network>
            <name>Outside-SRIOV</name>
            <ftd-interface>
              <outside/>
            </ftd-interface>
            <ftd-route-network>Outside-Clients</ftd-route-network>
          </network>
        </networks>
        <load-balance>
          <cisco-intelligent-traffic-director xmlns="http://com/example/intelligenttrafficdirector">
            <sides>
              <side>inside</side>
              <ingress-interface>vlan230</ingress-interface>
              <virtual-ip>172.16.2.220</virtual-ip>
              <virtual-ip-mask>255.255.255.0</virtual-ip-mask>
              <buckets>4</buckets>
            </sides>
            <sides>
              <side>outside</side>
              <ingress-interface>vlan200</ingress-interface>
              <virtual-ip>172.161.1.220</virtual-ip>
              <virtual-ip-mask>255.255.255.0</virtual-ip-mask>
              <buckets>4</buckets>
            </sides>
          </cisco-intelligent-traffic-director>
        </load-balance>
      </scaling>
    </vnf-deployment>
  </site>
</vnf-manager>
