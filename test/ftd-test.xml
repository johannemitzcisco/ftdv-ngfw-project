<config xmlns="http://tail-f.com/ns/config/1.0">
  <vnf-manager xmlns="http://example.com/ftdv-ngfw">
  <site>
    <name>bofa-ngfw</name>
      <vnf-deployment>
        <tenant>admin</tenant>
        <deployment-name>FTD-TEST</deployment-name>
        <catalog-vnf>Cisco-FTD-Small-SmallDeployment</catalog-vnf>
        <scaling>
          <threshold>
            <scale-up>2</scale-up>
            <scale-down>2</scale-down>
          </threshold>
          <networks>
            <network>
              <name>Inside</name>
              <ftd-interface>
                <inside/>
              </ftd-interface>
              <ftd-route-network>Inside-Servers</ftd-route-network>
            </network>
            <network>
              <name>Management</name>
            </network>
            <network>
              <name>Outside</name>
              <ftd-interface>
                <outside/>
              </ftd-interface>
              <ftd-route-network>Outside-Clients</ftd-route-network>
            </network>
          </networks>
          <load-balance>
            <cisco-intelligent-traffic-director xmlns="http://com/example/intelligenttrafficdirector">
              <sides>
                <side>inside</side>
                <ingress-interface>vlan100</ingress-interface>
                <virtual-ip>10.100.200.221</virtual-ip>
                <virtual-ip-mask>255.255.255.0</virtual-ip-mask>
                <buckets>4</buckets>
              </sides>
              <sides>
                <side>outside</side>
                <ingress-interface>vlan161</ingress-interface>
                <virtual-ip>172.161.2.221</virtual-ip>
                <virtual-ip-mask>255.255.255.0</virtual-ip-mask>
                <buckets>4</buckets>
              </sides>
            </cisco-intelligent-traffic-director>
          </load-balance>
        </scaling>
      </vnf-deployment>
  </site>
  </vnf-manager>
</config>
